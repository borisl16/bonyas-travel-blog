    <%= form.label :published_at %>
    <%= form.datetime_select :published_at, class: "form-control mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :author_id%>
    <%= form.text_field :author_id, class: "form-control mb-2" %> 
