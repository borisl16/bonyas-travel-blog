<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control mb-2" %>
  </div>

    <div class="form-group">
    <%= form.label :header_image %>
    <%= form.file_field :header_image, class: "form-control mb-2" %>
    <div class="mb-2">
    <% if post.header_image.present? %>
      <%= image_tag(post.header_image, width: '100%') %>
    <% end %>
    </div>
  </div>

  

  <div class="form-group">
    <%= form.label :published_at %>
    <%= form.datetime_select :published_at, class: "form-control mb-2" %>
  </div>

  <div class="form-group">
    <%= form.label :author_id%>
    <%= form.text_field :author_id, class: "form-control mb-2" %> 
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
